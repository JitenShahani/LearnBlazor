@inherits LayoutComponentBase
@inject IJSRuntime JSRuntime
@inject SidebarState SidebarState
@code {
	// Gets the current render mode from the cascading parameter set in Routes.razor
	[CascadingParameter (Name = "RenderMode")]
	public string? CurrentRenderMode { get; set; }

	private async Task ToggleMenu ()
		=> await JSRuntime.InvokeVoidAsync ("sidebar.toggle");
}