<div class="box border rounded bg-secondary-subtle shadow-lg">
	<_Condition Evaluation="Message is not null">
		<True>
			<p>@Message</p>
		</True>
	</_Condition>

	<Button Type="ButtonType.Button"
			Color="ButtonColor.Info"
			Outline="true"
			Class="shadow-none"
			@onclick="CloseMe">
		Close
	</Button>
</div>

<style>
	.box {
		padding: 1vw;
		margin: 1vw;
		float: left;
		/*background-color: lightgray;*/
		/*box-shadow: 10px 10px 20px 0px rgba(0,0,0,0.75);*/
	}
</style>

@code {
	[Parameter]
	public string? Message { get; set; }

	[Parameter]
	public EventCallback<string> OnCloseRequested { get; set; }

	private async Task CloseMe ()
		=> await OnCloseRequested.InvokeAsync (Message);
}